<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:layout_margin="8dp"
    android:id="@+id/card_view"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    card_view:cardCornerRadius="2dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/avatar_song"
            android:src="@drawable/header_bg"
            android:scaleType="centerCrop"
            android:layout_marginRight="5dp"
            android:layout_width="150dp"
            android:layout_height="150dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Large Text"
            android:id="@+id/name_song"
            android:layout_alignParentTop="true"
            android:layout_toEndOf="@+id/avatar_song" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:text="Small Text"
            android:id="@+id/artist_song"
            android:layout_below="@+id/name_song"
            android:layout_toEndOf="@+id/avatar_song" />

        <RatingBar
            android:numStars="4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/rating_song"
            android:layout_alignBottom="@+id/avatar_song"
            android:layout_toEndOf="@+id/avatar_song"
            android:layout_marginBottom="24dp" />


    </RelativeLayout>

</android.support.v7.widget.CardView>

